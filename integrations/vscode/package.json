{
    "name": "sentinel-vscode",
    "displayName": "Sentinel AI Alignment",
    "description": "Mathematical alignment and goal drift prevention for AI agents.",
    "version": "0.1.0",
    "publisher": "sentinel-team",
    "engines": {
        "vscode": "^1.75.0"
    },
    "categories": [
        "Programming Languages",
        "Linters"
    ],
    "activationEvents": [
        "onLanguage:rust",
        "onLanguage:typescript",
        "onLanguage:javascript",
        "onLanguage:python"
    ],
    "main": "./out/extension.js",
    "contributes": {
        "configuration": {
            "type": "object",
            "title": "Sentinel",
            "properties": {
                "sentinel.path": {
                    "type": "string",
                    "default": "sentinel",
                    "description": "Path to the sentinel-cli binary."
                }
            }
        },
        "viewsContainers": {
            "activitybar": [
                {
                    "id": "sentinel-explorer",
                    "title": "Sentinel",
                    "icon": "$(shield)"
                }
            ]
        },
        "views": {
            "sentinel-explorer": [
                {
                    "id": "sentinel-goals",
                    "name": "Goal Manifold"
                }
            ]
        }
    },
    "dependencies": {
        "vscode-languageclient": "^8.1.0"
    },
    "devDependencies": {
        "@types/vscode": "^1.75.0",
        "typescript": "^4.9.5"
    }
}
